iddleware","        LogRequestsMiddleware(.info)","    }","    \/\/ Add default endpoint","    router.get(\"\/\") { _,_ in","        return \"Hello!\"","    }","    return router","}"],"identifier":"todos-template-06.swift"},"doc://com.opticalaberration.hummingbird/tutorials/Todos/Store-Todos-in-a-database":{"kind":"article","url":"\/tutorials\/todos\/store-todos-in-a-database","role":"article","identifier":"doc:\/\/com.opticalaberration.hummingbird\/tutorials\/Todos\/Store-Todos-in-a-database","abstract":[],"title":"Store Todos in a database","type":"topic"},"doc://com.opticalaberration.hummingbird/tutorials/Todos/API-Setup":{"abstract":[],"role":"article","type":"topic","identifier":"doc:\/\/com.opticalaberration.hummingbird\/tutorials\/Todos\/API-Setup","title":"API Setup","kind":"article","url":"\/tutorials\/todos\/api-setup"}}}