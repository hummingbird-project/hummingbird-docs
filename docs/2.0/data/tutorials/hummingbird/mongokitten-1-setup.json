     LogRequestsMiddleware(.info)","    }","    \/\/ Add default endpoint","    router.get(\"\/\") { _,_ in","        return \"Hello!\"","    }","    return router","}"]},"mongokitten-setup-04.swift":{"syntax":"swift","type":"file","identifier":"mongokitten-setup-04.swift","fileType":"swift","fileName":"Package.swift","highlights":[{"line":15},{"line":23}],"content":["\/\/ swift-tools-version:6.0","\/\/ The swift-tools-version declares the minimum version of Swift required to build this package.","","import PackageDescription","","let package = Package(","    name: \"MeowSocial\",","    platforms: [.macOS(.v14), .iOS(.v17), .tvOS(.v17)],","    products: [","        .executable(name: \"App\", targets: [\"App\"]),","    ],","    dependencies: [","        .package(url: \"https:\/\/github.com\/hummingbird-project\/hummingbird.git\", from: \"2.0.0\"),","        .package(url: \"https:\/\/github.com\/apple\/swift-argument-parser.git\", from: \"1.3.0\"),","        .package(url: \"https:\/\/github.com\/orlandos-nl\/MongoKitten.git\", from: \"7.9.0\"),","    ],","    targets: [","        .executableTarget(","            name: \"App\",","            dependencies: [","                .product(name: \"ArgumentParser\", package: \"swift-argument-parser\"),","                .product(name: \"Hummingbird\", package: \"hummingbird\"),","                .product(name: \"MongoKitten\", package: \"MongoKitten\"),","            ],","            path: \"Sources\/App\"","        ),","        .testTarget(","            name: \"AppTests\",","            dependencies: [","                .byName(name: \"App\"),","                .product(name: \"HummingbirdTesting\", package: \"hummingbird\")","            ],","            path: \"Tests\/AppTests\"","        )","    ]",")"]},"mongokitten-setup-18.sh":{"fileType":"","identifier":"mongokitten-setup-18.sh","fileName":"Test Application","type":"file","highlights":[{"line":1}],"syntax":"","content":["> curl -i localhost:8080\/kittens"]},"doc://co